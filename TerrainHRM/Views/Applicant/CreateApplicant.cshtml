@model TerrainHRM.Models.HrApplicantOld

@{ 
    ViewData["Title"] = "Create Applicant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create Applicant</h4>
<hr />
<div class="row">
    <form action="CreateApplicant" method="post">

            <div class="form-group row">

                <div class="col-md-2 text-left">
                    <label class="text-dark">Name</label>
                </div>
                <div class="col-md-4">
                    <input class="form-control" asp-for="Name" />
                </div>
                <div class="col-md-2 text-left">
                    <label class="text-dark">Gender</label>
                </div>
                <div class="col-md-4">
                    <input class="form-control" asp-for="Gender" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-md-2 text-left">
                    <label class="text-dark">Age</label>
                </div>
                <div class="col-md-4">
                    <input class="form-control" asp-for="Age" />
                </div>
                <div class="col-md-2 text-left">
                    <label class="text-dark">Total Experience</label>
                </div>
                <div class="col-md-4">
                    <input class="form-control" asp-for="TotalExperiences" />
                </div>
            </div>

            <table>
                <thead class="thead-dark">
                    <tr>
                        <th>Company Name</th>
                        <th>Designation</th>
                        <th>Years Worked</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.HrExperiences.Count; i++)
                    {
                    <tr>
                        <td>
                            @Html.EditorFor(x => x.HrExperiences[i].CompanyName, new { htmlAttribute = new { @class = "form-control" } })
                        </td>
                        <td>
                            @Html.EditorFor(x => x.HrExperiences[i].Designation, new { htmlAttribute = new { @class = "form-control" } })
                        </td>
                        <td>
                            @Html.EditorFor(x => x.HrExperiences[i].YearsWorked, new { htmlAttribute = new { @class = "form-control" } })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <br />
            <div class="form-group row">
                <div class="col-8">

                </div>
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a class="btn btn-warning" asp-action="Index" asp-controller="Applicant">Back</a>
            </div>

    </form>
</div>