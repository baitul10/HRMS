@model TerrainHRM.Models.HrCompany


@{
    ViewData["Title"] = "Company Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imgSrc = "~/images/" + ViewBag.ImagePath;

}

<div class="text-info row">
    <div class="text-info col-6">
        <h4>Company Information</h4>
    </div>
    <div class="text-info col-6 text-right">
        @if (Model == null)
        {
            <a class="btn btn-primary" asp-action="CreateCompany" asp-controller="Company">Create New</a>
        }
        else
        {
            <a class="btn btn-primary" asp-action="EditCompany" asp-controller="Company">Edit Company Information</a>
        }
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-6">
        @if (Model == null)
        {
            <p>No Data Found.</p>
        }
        else
        {
            <div class="form-group row">
                <div class="col-md-12 text-right">

                    <div class="form-group row" style="display:none">
                        <div class="col-2 text-right">
                            <label class="text-info">Company Id</label>
                        </div>
                        <div class="col-4">
                            @*<input class="form-control" asp-for="@Model.CimId" />*@
                            <input readonly type="text" name="id" placeholder="1,2,3" autocomplete="off" value="@Model.CimId" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-2 text-right">
                            <label class="text-md-left" style="width:inherit;">Name</label>
                        </div>
                        <input readonly type="text" name="compnayName" autocomplete="off" value="@Model.CimName" class="col-md-4" />

                        <div class="col-md-2 text-right">
                            <label class="text-md-left"  style="width:inherit;">Short Name</label>
                        </div>

                        <input readonly value="@Model.CimShortName" type="text" name="shortName" autocomplete="off" class="col-md-4" />
                    </div>
                    <div class="form-group row">
                        <div class="col-2 text-right">
                            <label class="text-md-left"  style="width:inherit;">Address</label>
                        </div>
                            <input readonly value="@Model.CimDetails" type="text" name="details" autocomplete="off" class="col-md-4" />
                        <div class="col-2 text-right">
                            <label class="text-md-left"  style="width:inherit;">Moto</label>
                        </div>
                            <input readonly value="@Model.CimMoto" type="text" name="moto" autocomplete="off" class="col-md-4" />
                    </div>
                </div>
            </div>

            <div class="col-4">
                <img src="@imgSrc" height="250" width="250" asp-append-version="true" />
            </div>


        }

    </div>

    <div class="col-md-6">

    </div>

</div>


