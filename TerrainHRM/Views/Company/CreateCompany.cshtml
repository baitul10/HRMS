@model TerrainHRM.Models.HrCompany


@{
    ViewData["Title"] = "Company Information";
    Layout = "~/Views/Shared/_Layout.cshtml";



}

<form action="/Company/CreateCompany" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-2 text-right">
            <label class="text-info">Company Id</label>
        </div>
        <div class="col-4">
            @*<input class="form-control" asp-for="@Model.CimId" />*@
            <input type="number" name="id" placeholder="1,2,3" autocomplete="off" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 text-right">
            <label class="text-info">Company Name</label>
        </div>
        <div class="col-4">
            <input type="text" name="compnayName" autocomplete="off" />
        </div>
        <div class="col-2 text-right">
            <label class="text-info">Short Name</label>
        </div>
        <div class="col-4">
            <input type="text" name="shortName" autocomplete="off" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 text-right">
            <label class="text-info">Company Address</label>
        </div>
        <div class="col-4">
            <input type="text" name="details" autocomplete="off" />
        </div>
        <div class="col-2 text-right">
            <label class="text-info">Company Moto</label>
        </div>
        <div class="col-4">
            <input type="text" name="moto" autocomplete="off" />
        </div>
    </div>


    <div class="form-group row">
        <div class="col-2">

        </div>
        <div class="col-4">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                Multi Company Flag
            </label>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 text-right">
            <label class="text-info">Logo</label>
        </div>
        <div class="col-4">
            @*<input class="form-control" asp-for="@Model.CimLogoApps" />*@
            <input type="file" name="logo" required />
        </div>
    </div>

    <div class="form-group row">
        <input type="submit" class="btn btn-primary" value="Submit" />

        <a style="margin-left:10px;" class="btn btn-danger text-white" asp-action="Index" asp-controller="Company">Back</a>
    </div>
</form>



