        <div class="col-4">
            <input type="text" @*name="compnayName"*@ asp-for="@Model.CimName" class="form-control"/>
        </div>
        <div class="col-2 text-right">
            <label class="text-info">Short Name</label>
        </div>
        <div class="col-4">
            <input type="text" @*name="shortName"*@ asp-for="@Model.CimShortName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 text-right">
            <label class="text-info">Company Address</label>
        </div>
        <div class="col-4">
            <input type="text" @*name="details"*@ asp-for="@Model.CimDetails" class="form-control" />
        </div>
        <div class="col-2 text-right">
            <label class="text-info">Company Moto</label>
        </div>
        <div class="col-4">
            <input type="text" @*name="moto"*@ asp-for="@Model.CimMoto" class="form-control" />
