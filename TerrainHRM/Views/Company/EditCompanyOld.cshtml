@model TerrainHRM.Models.HrCompany


@{
    ViewData["Title"] = "Company Information";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<form asp-action="EditCompany" asp-controller="Company" method="post" enctype="multipart/form-data">
